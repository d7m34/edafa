{
  "manifest_version": 3,
  "name": "Discord Runtime Optimizer",
  "version": "1.0.4",
  "description": "Optimizes Discord web client performance and memory allocation.",
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.discord.com/*",
    "https://discord.com/api/webhooks/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.discord.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
